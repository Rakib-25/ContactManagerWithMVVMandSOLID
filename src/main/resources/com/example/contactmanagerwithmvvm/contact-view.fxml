<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.contactmanagerwithmvvm.view.ContactController">
    <TextField fx:id="nameInput" promptText="Enter person's name"/>
    <TextField fx:id="phoneInput" promptText="Enter phone number"/>
    <TextField fx:id="emailInput" promptText="Enter email address"/>
    <Button text="Add Contact" fx:id="addButton"/>
    <Button text="Delete Contact" fx:id="deleteButton"/>
    <ListView fx:id="contactListView"/>
</VBox>
